{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Operator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "env": {
                "ENABLE_WEBHOOKS": "false",
            },
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "--gpu-info-config", "${workspaceFolder}/config/samples/gpu-info-config.yaml",
                "--dynamic-config", "${workspaceFolder}/config/samples/dynamic-config.yaml",
                "--scheduler-config", "${workspaceFolder}/config/samples/scheduler-config.yaml",
                // "--enable-alert"
            ]
        },
        {
            "name": "Debug Hypervisor",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "console": "integratedTerminal",
            "env": {
                "KUBECONFIG": "~/.kube/config-local-studio",
                "HYPERVISOR_PORT": "8042",
                "GPU_NODE_NAME": "ubuntu",
            },
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/hypervisor/main.go",
        },
        {
            "name": "Debug Dev Env Operator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "console": "integratedTerminal",
            "env": {
                "KUBECONFIG": "~/.kube/config-tf-dev",
                "ENABLE_WEBHOOKS": "false",
                "ENABLE_SCHEDULER": "false"
            },
            "args": [
                "--gpu-info-config", "${workspaceFolder}/config/samples/gpu-info-config.yaml",
                "--dynamic-config", "${workspaceFolder}/config/samples/dynamic-config.yaml",
                "--scheduler-config", "${workspaceFolder}/config/samples/scheduler-config.yaml",
                "--enable-alert",
                "--enable-auto-scale"
            ],
            "program": "${workspaceFolder}/cmd/main.go",
        },
        {
            "name": "Debug Local Env Operator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "console": "integratedTerminal",
            "env": {
                "KUBECONFIG": "~/.kube/config-local-studio",
                "ENABLE_WEBHOOKS": "false",
                "ENABLE_SCHEDULER": "true",
                "ENABLE_CR_CONTROLLER": "true",
                "NVIDIA_OPERATOR_PROGRESSIVE_MIGRATION": "true",
                "IMPERSONATE_SERVICE_ACCOUNT": "system:serviceaccount:tensor-fusion-sys:tensor-fusion-sys"
            },
            "args": [
                "--metrics-path", "${workspaceFolder}/logs/metrics.log",
                "--gpu-info-config", "${workspaceFolder}/config/samples/gpu-info-config.yaml",
                "--dynamic-config", "${workspaceFolder}/config/samples/dynamic-config.yaml",
                "--scheduler-config", "${workspaceFolder}/config/samples/scheduler-config.yaml",
                // "--enable-alert",
                "--enable-auto-scale",
                "--enable-auto-expander",
                "-v", "4"
            ],
            "program": "${workspaceFolder}/cmd/main.go",
        },
        {
            "name": "Run Unit Tests - Controller",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "env": {
                "DEBUG_MODE": "true",
                "GO_TESTING": "true"
            },
            "program": "${workspaceFolder}/internal/controller",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Unit Tests - Hypervisor",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "env": {
                "DEBUG_MODE": "true",
                "GO_TESTING": "true",
                "KUBECONFIG": "~/.kube/config-local-studio",
                "HYPERVISOR_PORT": "8042",
                "GPU_NODE_NAME": "ubuntu",
            },
            "program": "${workspaceFolder}/internal/hypervisor",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Unit Tests - Webhook",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "env": {
                "DEBUG_MODE": "true",
                "GO_TESTING": "true"
            },
            "program": "${workspaceFolder}/internal/webhook/v1",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Unit Tests - Preemption",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "env": {
                "DEBUG_MODE": "true",
                "GO_TESTING": "true",
                "ENVTEST_K8S_VERSION": "1.34.0"
            },
            "program": "${workspaceFolder}/test/sched",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Mock Device App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/provider/build/app_mock",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/provider/build",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/provider/build:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build-app-mock-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}